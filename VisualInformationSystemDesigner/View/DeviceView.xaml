<Page x:Class="VisualInformationSystemDesigner.View.DeviceView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VisualInformationSystemDesigner.View"
      xmlns:viewModel="clr-namespace:VisualInformationSystemDesigner.ViewModel"
      xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
      mc:Ignorable="d"
      d:DesignHeight="1000" d:DesignWidth="320"
      Title="DeviceView">

    <Page.DataContext>
        <viewModel:DeviceViewModel/>
    </Page.DataContext>

    <Grid Background="LightBlue">
        <UniformGrid Columns="1" Rows="3">
            <svgc:SvgViewbox Source="/Resources/pc-svgrepo-com.svg"/>
            <svgc:SvgViewbox Source="/Resources/server-svgrepo-com.svg"/>
        </UniformGrid>
    </Grid>
</Page>
