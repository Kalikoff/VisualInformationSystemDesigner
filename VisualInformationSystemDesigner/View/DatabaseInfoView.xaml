<Window x:Class="VisualInformationSystemDesigner.View.DatabaseInfoView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VisualInformationSystemDesigner.View"
        xmlns:viewModel="clr-namespace:VisualInformationSystemDesigner.ViewModel"
        mc:Ignorable="d"
        Title="Настройка устройства"
        Height="510"
        Width="463"
        ResizeMode="NoResize"
        d:DataContext="{d:DesignInstance Type=viewModel:DatabaseInfoViewModel}">
    <Grid Background="{StaticResource SecondaryColor}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBox Grid.Row="0"
                 Text="{Binding Database.Name}"/>

        <Frame Grid.Row="1"
               Margin="10"
               Content="{Binding CurrentPage}"/>
    </Grid>
</Window>